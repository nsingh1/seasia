<% content_for :body_content_title do %>
  <%= @vertical.title %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Title</h1>
    <p>
      <%=raw @vertical.title %>
    </p>
  </section>
  <section>
    <h1>Blurb</h1>
    <p>
      <%=raw @vertical.blurb %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="verticals">
      <% @verticals.each do |vertical| %>
        <li>
          <%= link_to vertical.title, refinery.verticals_vertical_path(vertical) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
