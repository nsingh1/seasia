<ul>
  <% if ::Refinery::Verticals::Admin::VerticalsController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.verticals_admin_verticals_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_verticals_admin_vertical_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? && ::Refinery::Verticals::Admin::VerticalsController.sortable? && ::Refinery::Verticals::Vertical.any? %>
  <li>
    <%= link_to t('.reorder', :what => "Verticals"),
                 refinery.verticals_admin_verticals_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Verticals"),
                 refinery.verticals_admin_verticals_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
