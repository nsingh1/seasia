<% content_for :body_content_title do %>
  <%= @technology.language %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Language</h1>
    <p>
      <%=raw @technology.language %>
    </p>
  </section>
  <section>
    <h1>Blurb</h1>
    <p>
      <%=raw @technology.blurb %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="technologies">
      <% @technologies.each do |technology| %>
        <li>
          <%= link_to technology.language, refinery.technologies_technology_path(technology) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
