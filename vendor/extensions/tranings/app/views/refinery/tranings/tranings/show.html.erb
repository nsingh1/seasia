<% content_for :body_content_title do %>
  <%= @traning.title %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Title</h1>
    <p>
      <%=raw @traning.title %>
    </p>
  </section>
  <section>
    <h1>Blurb</h1>
    <p>
      <%=raw @traning.blurb %>
    </p>
  </section>
  <section>
    <h1>Date</h1>
    <p>
      <%=raw @traning.date %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="tranings">
      <% @tranings.each do |traning| %>
        <li>
          <%= link_to traning.title, refinery.tranings_traning_path(traning) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
