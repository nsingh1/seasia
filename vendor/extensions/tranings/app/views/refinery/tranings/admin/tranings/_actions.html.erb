<ul>
  <% if ::Refinery::Tranings::Admin::TraningsController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.tranings_admin_tranings_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_tranings_admin_traning_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? && ::Refinery::Tranings::Admin::TraningsController.sortable? && ::Refinery::Tranings::Traning.any? %>
  <li>
    <%= link_to t('.reorder', :what => "Tranings"),
                 refinery.tranings_admin_tranings_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Tranings"),
                 refinery.tranings_admin_tranings_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
