<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(requirement) -%>">
  <span class='title'>
    <%= requirement.language %>

  </span>
  <span class='actions'>
    
    <%= link_to refinery_icon_tag("application_go.png"), refinery.requirements_requirement_path(requirement),
        :title => t('.view_live_html'),
        :target => "_blank" %>
    
    <%= link_to refinery_icon_tag("application_edit.png"), refinery.edit_requirements_admin_requirement_path(requirement),
         :title => t('.edit') %>
    <%= link_to refinery_icon_tag("delete.png"), refinery.requirements_admin_requirement_path(requirement),
        :class => "cancel confirm-delete",
        :title => t('.delete'),
        :confirm => t('message', :scope => 'refinery.admin.delete', :title => requirement.language),
        :method => :delete %>
  </span>
</li>