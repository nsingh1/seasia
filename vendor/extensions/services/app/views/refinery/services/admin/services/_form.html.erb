<%= form_for [refinery, :services_admin, @service] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @service,
              :include_object_name => true %>

  
  <div class='field'>
    <%= f.label :technology -%>
    <%= f.text_field :technology, :class => 'larger widest'  -%>

  </div>
  
  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.services.admin.services.service'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @service.technology) %>
<% end -%>
