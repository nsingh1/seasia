<% content_for :body_content_title do %>
  <%= @service.technology %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Technology</h1>
    <p>
      <%=raw @service.technology %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="services">
      <% @services.each do |service| %>
        <li>
          <%= link_to service.technology, refinery.services_service_path(service) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
